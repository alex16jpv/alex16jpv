---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Welcome to Alexander Valencia's Portfolio. I'm a full-stack developer passionate about backend development with NodeJS and frontend technologies."
    />
    <meta
      name="keywords"
      content="Alexander Valencia, Alexander, Valencia, alexconlag, alex16jpv, Portfolio, Personal projects"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="dark:bg-primary dark:text-white text-primary">
    <slot />
  </body>
</html>
