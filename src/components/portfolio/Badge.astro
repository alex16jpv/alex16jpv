---
import { badgeInfo } from "../../constants/badges";

interface Props {
  name: string;
  bgColor?: string;
  textColor?: string;
}

const {
  name,
  bgColor = "bg-slate-500",
  textColor = "text-neutral-50",
}: Props = Astro.props;

const current = badgeInfo[name];
---

<spam
  class:list={[
    "rounded-md",
    "px-2",
    "py-1",
    "text-xs",
    "font-semibold",
    {
      [current?.bgColor]: current?.bgColor,
      [bgColor]: !current?.bgColor,
    },
    {
      [current?.textColor]: current?.textColor,
      [textColor]: !current?.textColor,
    },
  ]}
>
  {current?.text || name}
</spam>
